<script>
    var a = new Vue({
        el: '#mika',
        data: {
            AllOrderDetailsList: [],
            ReOrderDetailsList: [],
            a: {
                modID:0
            }
        },
        methods: {
            checkAndSend: function (i) {
                //alert(i);
                let self = this;
                self.a.modID = i;
                //alert(self.a.modID);

                //POST請求
                axios({
                    method: 'post',
                    url: '/Manager/GetmodID',
                    //API要求的資料
                    data: self.a,
                    headers: { "Content-Type": 'application/json' }
                })
                    .then(function (response) {
                        if (response.data == true) {
                            //alert("傳入成功");
                            window.location.reload();

                        } else {
                            alert("確認退款失敗");
                        }
                    })
                    .catch(function (response) {
                        //handle error
                        //console.log(response.data);
                        window.location.href = response.data
                    });
            }
        },
        mounted: function () {
            var self = this;
            axios.get("/Manager/GetAllOrderDetails").then(function (res) {
                self.AllOrderDetailsList = res.data;
            }),
                axios.get("/Manager/GetReFundingOrderDetails").then(function (res) {
                self.ReOrderDetailsList = res.data;
            })
        }
    });
</script>